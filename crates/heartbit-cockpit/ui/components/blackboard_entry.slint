import { VerticalBox, ScrollView } from "std-widgets.slint";

export struct BlackboardData {
    key: string,
    value: string,
}

export component BlackboardEntry inherits Rectangle {
    in property <BlackboardData> entry;

    background: #1e293b;
    border-radius: 6px;
    vertical-stretch: 0;

    VerticalBox {
        padding: 8px;
        spacing: 4px;
        Text {
            text: entry.key;
            color: #f59e0b;
            font-size: 12px;
            font-weight: 600;
        }
        Rectangle {
            max-height: 80px;
            vertical-stretch: 0;
            ScrollView {
                VerticalLayout {
                    padding: 0px;
                    Text {
                        text: entry.value;
                        color: #cbd5e1;
                        font-size: 11px;
                        wrap: word-wrap;
                    }
                }
            }
        }
    }
}
